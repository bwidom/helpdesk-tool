<Window x:Class="EmailWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmailWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="140" Width="340">
    <Grid>
        <Label Content="Template:" HorizontalAlignment="Left" Height="29" Margin="10,10,0,0" VerticalAlignment="Top" Width="66"/>
        <ComboBox x:Name="cbTemplate" HorizontalAlignment="Left" Height="22" Margin="111,14,0,0" VerticalAlignment="Top" Width="104"/>
        <Label Content="Add Question:" HorizontalAlignment="Left" Height="30" Margin="10,53,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cbQuestion" HorizontalAlignment="Left" Height="22" Margin="111,56,0,0" VerticalAlignment="Top" Width="104"/>
        <Button Content="Add" HorizontalAlignment="Left" Height="22" Margin="232,56,0,0" VerticalAlignment="Top" Width="73"/>
	<Button x:Name="bSelectTemplate" Content="Select" HorizontalAlignment="Left" Height="22" Margin="232,14,0,0" VerticalAlignment="Top" Width="73"/>

    </Grid>
</Window>
