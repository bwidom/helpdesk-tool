<Window x:Class="ChangePasswordWindo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChangePasswordWindo"
        mc:Ignorable="d"
        Title="Change Password" Height="150" Width="370">
    <Grid Background="#FFB8AFAF">
        <Label x:Name="lChangePasswordPrompt" Content="Change Maria Antoinette's password to:" HorizontalAlignment="Center" Height="29" Margin="0,8,0,0" VerticalAlignment="Top" Width="350" HorizontalContentAlignment="Center" FontFamily="Leelawadee UI"/>
        <TextBox x:Name="tbNewPassword" HorizontalAlignment="Center" Height="29" Margin="0,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" VerticalContentAlignment="Center" Background="#FFDACFCF" UseLayoutRounding="False" ScrollViewer.CanContentScroll="True"/>
        <Button x:Name="bConfirm" Content="Confirm" HorizontalAlignment="Left" Height="25" Margin="62,76,0,0" VerticalAlignment="Top" Width="109" FontFamily="Leelawadee UI"/>
        <Button x:Name="bCancel" Content="Cancel" HorizontalAlignment="Left" Height="24" Margin="200,77,0,0" VerticalAlignment="Top" Width="109" FontFamily="Leelawadee"/>

    </Grid>
</Window>

