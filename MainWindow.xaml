<Window x:Class="Helpdesk_Tool2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Helpdesk_Tool2"
        mc:Ignorable="d"
        Title="Help Desk Tool" Height="195" Width="630">
    <Grid Background="#FFB8AFAF">
        <TextBox x:Name="tbSearchUser" HorizontalAlignment="Left" Height="22" Margin="120,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Background="#FFDACFCF" BorderBrush="#FF707070"/>
        <Button x:Name="bSearch" Content="Search" HorizontalAlignment="Left" Height="22" Margin="310,10,0,0" VerticalAlignment="Top" Width="82" Cursor="Hand"/>
        <ComboBox x:Name="cbSearchCriteria" HorizontalAlignment="Left" Height="22" Margin="15,10,0,0" VerticalAlignment="Top" Width="102" SelectedIndex="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            <ComboBoxItem Content="EmployeeID"/>
            <ComboBoxItem Content="SAMAccountName"/>
        </ComboBox>
        <DataGrid x:Name="dgAccountInfo" HorizontalAlignment="Center" Height="50" VerticalAlignment="Center" Width="585" RowHeight="30" ColumnWidth="*" IsReadOnly="True" BorderBrush="Gray" BorderThickness="1" RowHeaderWidth="0"  HorizontalContentAlignment="Center" FontWeight="Regular" Background="#FFDACFCF">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>

            </DataGrid.Columns>

        </DataGrid>

        <Button x:Name="bChangePassword" Content="Change Password" HorizontalAlignment="Left" Height="24" Margin="107,125,0,0" VerticalAlignment="Top" Width="131" Cursor="Hand"/>
        <Button x:Name="bUnlock" Content="Unlock" HorizontalAlignment="Left" Height="24" Margin="388,125,0,0" VerticalAlignment="Top" Width="131" Cursor="Hand"/>
        <Label x:Name="lEmployeeID" HorizontalAlignment="Left" Height="17" Margin="48,35,0,0"  VerticalAlignment="Top" Width="190"  HorizontalContentAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}"  Foreground="Black" Content="" VerticalContentAlignment="Center" Padding="5,0,5,0"/>
        <Label x:Name="lSAMAccountName" HorizontalAlignment="Left" Height="17" Margin="306,35,0,0" VerticalAlignment="Top" Width="190" HorizontalContentAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Black" Content="" VerticalContentAlignment="Center" Padding="5,0,5,0"/>
    </Grid>
</Window>
