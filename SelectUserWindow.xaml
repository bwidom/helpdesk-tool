<Window x:Class="SelectUserWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SelectUserWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="410" Width="300">
    <Grid  Background="#FFB8AFAF">
        <ListBox x:Name="lbUsers" HorizontalAlignment="Center" Height="282" VerticalAlignment="Top" Width="280" Margin="0,37,0,0"  Background="#FFB8AFAF"/>
        <Button x:Name="bSelectUser" Content="Select" HorizontalAlignment="Left" Height="31" Margin="10,328,0,0" VerticalAlignment="Top" Width="121"/>
        <Button x:Name="bCancel" Content="Cancel" HorizontalAlignment="Left" Height="31" Margin="155,328,0,0" VerticalAlignment="Top" Width="121"/>
        <TextBox  HorizontalAlignment="Left" Height="27" Margin="10,6,0,0" VerticalAlignment="Top" Width="244" FontSize="14" Text="Select a user..." IsReadOnly="True" Background="#FFB8AFAF" SelectionTextBrush="{x:Null}" BorderThickness="0">

        </TextBox>

    </Grid>
</Window>
